void pol1(int num, int size)
{
	int arr[7];
	int i,divide=1;
	for (i = 0; i < size - 1; i++)
		divide = divide * 10;
	printf("%d\n", divide);
	for (i = 0; i < size; i++)
	{
		arr[i] = num / divide;
		num = num % divide;
		divide = divide / 10;
		
	}
	printf("%d\n", divide);
	for (i = 0; i < size; i++)
		printf("%d ", arr[i]);
}
