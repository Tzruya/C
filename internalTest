//question3
/*
*  כיתבו פונקציה שמקבלת מערך הבודקת 3 תנאים
*  -כל המספרים במערך חיוביים
*  -סכום חצי המערך הראשון שווה לסכום חצי המערך השני
* -ערכו של המספר הראשון במערך מופיע פעמיים לכל היותר
*/
#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include<math.h>

int func(int vec[10])
{
	int i,ans;
	int sum1 = 0, sum2 = 0;
	int arr1 = vec[0],count =0;
	for (i = 0; i < 10; i++)
	{
		sum1 = sum1 + vec[i];
		sum2 = sum2 + vec[9 - i];
		if (vec[i] >= 0)
			ans = 1;
		else
			return 0;
		if (arr1 == vec[i])
			count++;
		if (count == 3)
			return 0;
	}
	if (sum1 == sum2)
		return 1;
	else return 0;
	
}
int main()
{
	int ans=2;
	int vec[10] = { 10,4,2,9,8,7,3,1,10,12};
	ans=func(vec);
	printf("%d",ans);
}
